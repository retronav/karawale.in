{% macro postStart(post) %}
    <article class="h-entry {{ post.data.kind }}">
        <a href="{{ site.baseUrl }}" class="p-author h-card hidden">{{ site.author }}</a>
        {# Continued in postEnd #}
{% endmacro %}
{% macro postEnd(post) %}
    {# Continued from postStart #}
    <a class="u-url" href="{{ post.url }}">
        <time class="dt-published" datetime="{{ post.date | formatDate("YYYY-MM-DDTHH:mm:ssZ") }}">
            {{ post.date | formatDate("DD MMM, YYYY, h:mma") }}
        </time>
        {% if post.data.updated %}
            , updated
            <time class="dt-updated" datetime="{{ post.data.updated | formatDate("YYYY-MM-DDTHH:mm:ssZ") }}">
                {{ post.data.updated | formatDate("DD MMM, YYYY, h:mma") }}
            </time>
        {% endif %}
    </a>
    <ul class="tags">
        {% for tag in post.data.tags %}
            <li>
                <a href="/tags/{{ tag }}">
                    #<span class="p-category">{{ tag }}</span>
                </a>
            </li>
        {% endfor %}
    </ul>
</article>
{% endmacro %}
{% macro article(post) %}
    <h2 style="margin: 0;">
        <a href="{{ post.url }}">{{ post.data.title }}</a>
    </h2>
    <p>{{ post.data.summary }}</p>
{% endmacro %}
{% macro note(post) %}
    <section class="e-content">{{ post.content | safe }}</section>
{% endmacro %}
{% macro like(post) %}
    <p>Like of
        <a href="{{ post.data['like-of'] }}">{{ post.data['like-of'] }}</a>
    </p>
{% endmacro %}
{% macro photo(post) %}
    <section class="photos">
        {% for photo in post.data.photo %}
            <img src="{{ photo.value }}" alt="{{ photo.alt }}" class="u-photo" data-preview> 
        {% endfor %}
    </section>
    {% if post.content %}
        <section class="e-content">{{ post.content | safe }}</section>
    {% endif %}
{% endmacro %}